<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="20dp"
    android:elevation="5dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivPersonagem"
        android:contentDescription="@string/imagem_personagem_desc"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/dr_estranho"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/nomePersonagem"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="@dimen/text_size_24"
        android:textStyle="bold"
        android:text="@string/nome_personagem_txt"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/ivPersonagem"
        app:layout_constraintStart_toEndOf="@id/ivPersonagem"
        app:layout_constraintBottom_toBottomOf="@id/ivPersonagem"
        android:gravity="center"
        android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>